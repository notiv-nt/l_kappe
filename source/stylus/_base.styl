

[ng\:cloak], [ng-cloak], .ng-cloak
	display none !important

*
	box-sizing border-box


html
	font $main-font-size/1.6 'Roboto', sans-serif
	height 100%
	min-height 100%


body
	background-color #b4b7b8
	color #a3a3a3
	cursor default
	-webkit-font-smoothing antialiased
	min-height 100%
	height 100%
	font-weight 300
	position relative


h1, h2, h3, h4, h5, h6, p
	margin 0
	padding 0


ul
	padding 0 0 0 18px
	margin 0 0 10px
	font-size _em(14px)

	a
		&:hover
			text-decoration underline


h1, h2, h3, h4, h5, h6
	font-weight 300


a
	text-decoration none
	color inherit


.clearfix

	&:after
		content ""
		display table
		height 0
		width 0
		clear both
		visibility hidden


img
	vertical-align top


.hidden
	display none !important


.responsive
	width 100%
	max-width 100%
	display block


.text-center
	text-align center

.text-left
	text-align left

.text-right
	text-align right


ul.unstyled
	list-style none
	padding 0
	margin 0


