
.fade.ng-enter
	animation .2s appear


.fade.ng-leave
	animation .05s disappear


@keyframes appear
	from
		opacity 0
		transform scale(0)

	to
		opacity 1
		transform scale(1)


@keyframes disappear
	from
		opacity 1
		transform scale(1)

	to
		opacity 0
		transform scale(0)

